{
    "name": "ados-labs/enterprise-psr3-logger",
    "description": "Enterprise PSR-3 Logger - Channel-based logging with pattern detection, rate limiting, Redis backup, and honest limitations",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "psr-3",
        "logger",
        "logging",
        "monolog",
        "enterprise",
        "channel-based",
        "security",
        "pattern-detection",
        "rate-limiting"
    ],
    "authors": [
        {
            "name": "Nicola Cucurachi",
            "email": "ados.labsproject@gmail.com",
            "role": "Developer"
        },
        {
            "name": "ADOS Labs",
            "email": "ados.labsproject@gmail.com"
        }
    ],
    "homepage": "https://github.com/adoslabsproject-gif/enterprise-psr3-logger",
    "support": {
        "issues": "https://github.com/adoslabsproject-gif/enterprise-psr3-logger/issues",
        "source": "https://github.com/adoslabsproject-gif/enterprise-psr3-logger"
    },
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "ext-pdo": "*",
        "monolog/monolog": "^3.0",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.93",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": ">=10.1 <12.0"
    },
    "suggest": {
        "ext-redis": "For Redis backup and config caching (recommended for production)",
        "ext-pgsql": "For PostgreSQL database storage (recommended)",
        "ext-mysqli": "For MySQL database storage",
        "ados-labs/enterprise-admin-panel": "For UI-based channel configuration and dashboard integration"
    },
    "autoload": {
        "psr-4": {
            "AdosLabs\\EnterprisePSR3Logger\\": "src/"
        },
        "files": [
            "src/Helpers/functions.php",
            "src/Helpers/should_log_stub.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "AdosLabs\\EnterprisePSR3Logger\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "stan": "phpstan analyze src --level=9",
        "fix": "php-cs-fixer fix"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "extra": {
        "admin-panel": {
            "module": "AdosLabs\\EnterprisePSR3Logger\\AdminIntegration\\LoggerAdminModule",
            "priority": 50,
            "assets-path": "public"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
