{
    "name": "senza1dio/enterprise-psr3-logger",
    "description": "Enterprise PSR-3 Logger - Channel-based logging with pattern detection, rate limiting, Redis backup, and honest limitations",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "psr-3",
        "logger",
        "logging",
        "monolog",
        "enterprise",
        "channel-based",
        "security",
        "pattern-detection",
        "rate-limiting"
    ],
    "authors": [
        {
            "name": "Senza1dio",
            "email": "noreply@senza1dio.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "ext-pdo": "*",
        "monolog/monolog": "^3.0",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "suggest": {
        "ext-redis": "For Redis backup and config caching (recommended for production)",
        "ext-pgsql": "For PostgreSQL database storage (recommended)",
        "ext-mysqli": "For MySQL database storage"
    },
    "autoload": {
        "psr-4": {
            "Senza1dio\\EnterprisePSR3Logger\\": "src/"
        },
        "files": [
            "src/Helpers/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Senza1dio\\EnterprisePSR3Logger\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "stan": "phpstan analyze src --level=9",
        "fix": "php-cs-fixer fix"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
